pipeline {
    agent {
        kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: go-builder
    image: docker.io/golang:1.24.3
    command:
    - cat
    tty: true
    volumeMounts:
    - name: docker-sock
      mountPath: /var/run/docker.sock
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock
"""
    }
  }
    environment {
        IMAGE = "vivekb1313/dev"
    }

    stages {
        stage('Checkout') {
            steps {
                container('go-builder') {
                    git url: 'https://github.com/vivekb1313/dev.git', branch: 'main'
                }
            }
        }
        stage('Build') {
            steps {
                 container('go-builder') {
                    sh 'go mod tidy'
                    sh 'go build -o url-checker'
                }
            }
        }

        stage('Test') {
            steps {
                container('go-builder') {
                    sh 'go test .'
                }
            }
        }

        stage('Docker Build and Push') {
            steps {
                container('go-builder') {
                    sh 'docker build -t $IMAGE:latest .'
                    withCredentials([string(credentialsId: 'dockerhub-token', variable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u vivekb1313 --password-stdin'
                    sh 'docker push $IMAGE:latest'
                    }
                }
            }
        }
    }
}
